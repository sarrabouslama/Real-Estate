@page
@model RealEstateAdmin.Pages.Properties.CreateModel
@{
    ViewData["Title"] = "Ajouter un Bien";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4><i class="fas fa-plus"></i> Ajouter un Nouveau Bien</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Property.Title" class="form-label">Titre</label>
                            <input asp-for="Property.Title" class="form-control" />
                            <span asp-validation-for="Property.Title" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Property.Type" class="form-label">Type</label>
                                <select asp-for="Property.Type" class="form-select">
                                    <option value="">-- Sélectionner --</option>
                                    <option value="Appartement">Appartement</option>
                                    <option value="Maison">Maison</option>
                                    <option value="Villa">Villa</option>
                                    <option value="Studio">Studio</option>
                                    <option value="Terrain">Terrain</option>
                                    <option value="Bureau">Bureau</option>
                                    <option value="Local Commercial">Local Commercial</option>
                                </select>
                                <span asp-validation-for="Property.Type" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Property.Price" class="form-label">Prix (DT)</label>
                                <input asp-for="Property.Price" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Property.Price" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Property.Address" class="form-label">Adresse</label>
                            <input asp-for="Property.Address" class="form-control" />
                            <span asp-validation-for="Property.Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Property.City" class="form-label">Ville</label>
                                <input asp-for="Property.City" class="form-control" />
                                <span asp-validation-for="Property.City" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Property.ZipCode" class="form-label">Code Postal</label>
                                <input asp-for="Property.ZipCode" class="form-control" />
                                <span asp-validation-for="Property.ZipCode" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Property.Description" class="form-label">Description</label>
                            <textarea asp-for="Property.Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Property.Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Property.Area" class="form-label">Superficie (m²)</label>
                                <input asp-for="Property.Area" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Property.Area" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Property.Bedrooms" class="form-label">Chambres</label>
                                <input asp-for="Property.Bedrooms" class="form-control" type="number" />
                                <span asp-validation-for="Property.Bedrooms" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Property.Bathrooms" class="form-label">Salles de Bain</label>
                                <input asp-for="Property.Bathrooms" class="form-control" type="number" />
                                <span asp-validation-for="Property.Bathrooms" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Property.Floor" class="form-label">Étage</label>
                                <input asp-for="Property.Floor" class="form-control" type="number" />
                                <span asp-validation-for="Property.Floor" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Property.Status" class="form-label">Statut</label>
                                <select asp-for="Property.Status" class="form-select">
                                    <option value="">-- Sélectionner --</option>
                                    <option value="À vendre">À vendre</option>
                                    <option value="À louer">À louer</option>
                                    <option value="Vendu">Vendu</option>
                                    <option value="Loué">Loué</option>
                                </select>
                                <span asp-validation-for="Property.Status" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Property.ImageUrl" class="form-label">URL de l'image</label>
                                <input asp-for="Property.ImageUrl" class="form-control" type="url" />
                                <span asp-validation-for="Property.ImageUrl" class="text-danger"></span>
                                <small class="text-muted">Exemple: https://example.com/image.jpg</small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="mb-3">Équipements et Aménités</h6>
                                <div class="form-check mb-2">
                                    <input asp-for="Property.HasParking" class="form-check-input" type="checkbox" />
                                    <label asp-for="Property.HasParking" class="form-check-label">
                                        <i class="fas fa-parking"></i> Parking
                                    </label>
                                </div>

                                <div class="form-check mb-2">
                                    <input asp-for="Property.HasGarden" class="form-check-input" type="checkbox" />
                                    <label asp-for="Property.HasGarden" class="form-check-label">
                                        <i class="fas fa-leaf"></i> Jardin
                                    </label>
                                </div>

                                <div class="form-check mb-2">
                                    <input asp-for="Property.HasBalcony" class="form-check-input" type="checkbox" />
                                    <label asp-for="Property.HasBalcony" class="form-check-label">
                                        <i class="fas fa-home"></i> Balcon
                                    </label>
                                </div>

                                <div class="form-check mb-3">
                                    <input asp-for="Property.HasElevator" class="form-check-input" type="checkbox" />
                                    <label asp-for="Property.HasElevator" class="form-check-label">
                                        <i class="fas fa-arrow-up"></i> Ascenseur
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h6 class="mb-3">Visibilité</h6>
                                <div class="form-check mb-2">
                                    <input asp-for="Property.IsActive" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="Property.IsActive" class="form-check-label">
                                        <i class="fas fa-eye"></i> Actif (visible sur le site)
                                    </label>
                                </div>

                                <div class="form-check mb-3">
                                    <input asp-for="Property.IsFeatured" class="form-check-input" type="checkbox" />
                                    <label asp-for="Property.IsFeatured" class="form-check-label">
                                        <i class="fas fa-star"></i> À la une (mis en avant)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Enregistrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}