<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Real Estate Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-building"></i> Real Estate Admin
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Admin") || User.IsInRole("Agent"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "active" : "")"
                                           asp-controller="Dashboard" asp-action="Index">
                                        <i class="fas fa-chart-line"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Properties" ? "active" : "")"
                                           asp-controller="Properties" asp-action="Index">
                                        <i class="fas fa-home"></i> Biens
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Reservations" ? "active" : "")"
                                           asp-controller="Reservations" asp-action="Index">
                                        <i class="fas fa-calendar-alt"></i> Réservations
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Users" ? "active" : "")"
                                           asp-controller="Users" asp-action="Index">
                                        <i class="fas fa-users"></i> Utilisateurs
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Properties" ? "active" : "")"
                                           asp-controller="Properties" asp-action="Index">
                                        <i class="fas fa-home"></i> Biens
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "MyReservations" ? "active" : "")"
                                           asp-controller="Reservations" asp-action="MyReservations">
                                        <i class="fas fa-calendar-check"></i> Mes Réservations
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>