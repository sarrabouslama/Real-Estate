@model RealEstateAdmin.Controllers.EditUserViewModel
@{
    ViewData["Title"] = "Modifier l'Utilisateur";
    ViewData["ActivePage"] = "Users";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="fas fa-edit"></i> Modifier l'Utilisateur</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="User.Id" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="User.Email" class="form-label">
                                <i class="fas fa-envelope"></i> Email
                            </label>
                            <input asp-for="User.Email" class="form-control" required />
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="User.UserName" class="form-label">
                                <i class="fas fa-user"></i> Nom d'utilisateur
                            </label>
                            <input asp-for="User.UserName" class="form-control" required />
                            <span asp-validation-for="User.UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="User.FullName" class="form-label">
                                <i class="fas fa-id-card"></i> Nom Complet
                            </label>
                            <input asp-for="User.FullName" class="form-control" />
                            <span asp-validation-for="User.FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="User.Phone" class="form-label">
                                <i class="fas fa-phone"></i> Téléphone
                            </label>
                            <input asp-for="User.Phone" class="form-control" type="tel" />
                            <span asp-validation-for="User.Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="User.Address" class="form-label">
                                <i class="fas fa-map-marker-alt"></i> Adresse
                            </label>
                            <input asp-for="User.Address" class="form-control" />
                            <span asp-validation-for="User.Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="User.City" class="form-label">
                                <i class="fas fa-city"></i> Ville
                            </label>
                            <input asp-for="User.City" class="form-control" />
                            <span asp-validation-for="User.City" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="User.IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="User.IsActive" class="form-check-label">
                                <i class="fas fa-check-circle"></i> Compte Actif
                            </label>
                        </div>

                        <div class="mb-3">
                            <label for="roleSelect" class="form-label">
                                <i class="fas fa-user-tag"></i> Rôle
                            </label>
                            <select asp-for="SelectedRole" asp-items="ViewBag.Roles" class="form-select"
                                    id="roleSelect">
                                <option value="">-- Sélectionner un rôle --</option>
                            </select>
                            <div class="form-text">
                                Rôle actuel: <strong>@Model.CurrentRole</strong>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <small>
                                <i class="fas fa-info-circle"></i>
                                @if (Model.User.RegistrationDate.HasValue)
                                {
                                    <text>Inscrit le: @Model.User.RegistrationDate.Value.ToString("dd/MM/yyyy")</text>
                                }
                            </small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Mettre à  jour
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}