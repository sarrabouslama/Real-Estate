@model RealEstateAdmin.Controllers.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["ActivePage"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">
        <i class="fas fa-chart-line"></i> Tableau de Bord
    </h2>

    <!-- Cartes de statistiques -->
    <div class="row mb-4">
        <!-- Total Biens -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Biens
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.TotalProperties
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Biens à  Vendre -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Biens à  Vendre
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.PropertiesForSale
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-home fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Biens à  Louer -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Biens à  Louer
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.PropertiesForRent
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-key fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Messages Non Lus -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Messages Non Lus
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.UnreadMessages
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-envelope fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Graphiques -->
    <div class="row">
        <!-- Graphique: Biens par Type -->
        <div class="col-xl-6 col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie"></i> Biens par Type
                    </h6>
                </div>
                <div class="card-body">
                    <canvas id="propertyTypeChart" style="height: 300px;"></canvas>
                </div>
            </div>
        </div>

        <!-- Graphique: Biens par Statut -->
        <div class="col-xl-6 col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-bar"></i> Biens par Statut
                    </h6>
                </div>
                <div class="card-body">
                    <canvas id="propertyStatusChart" style="height: 300px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques supplémentaires -->
    <div class="row">
        <div class="col-xl-12 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle"></i> Statistiques Détaillées
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="border-bottom pb-2 mb-2">
                                <h4 class="text-success">@Model.ActiveProperties</h4>
                                <p class="text-muted mb-0">Biens Actifs</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border-bottom pb-2 mb-2">
                                <h4 class="text-danger">@Model.InactiveProperties</h4>
                                <p class="text-muted mb-0">Biens Inactifs</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border-bottom pb-2 mb-2">
                                <h4 class="text-info">@Model.TotalMessages</h4>
                                <p class="text-muted mb-0">Total Messages</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border-bottom pb-2 mb-2">
                                <h4 class="text-primary">@Model.TotalUsers</h4>
                                <p class="text-muted mb-0">Total Utilisateurs</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Activités récentes -->
    <div class="row">
        <div class="col-xl-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-clock"></i> Biens Récents
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.RecentProperties.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var property in Model.RecentProperties)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@property.Title</strong><br />
                                        <small class="text-muted">@property.Type - @property.Price.ToString("N0") DT</small>
                                    </div>
                                    <span                        class="badge @(property.Status == "À vendre" ? "bg-success" : 
                                                                                                                                                                                                                                                                                                                                                                                                                       property.Status == "À louer" ? "bg-primary" :
                                                                                                                                                                                                                                                                                                                                                                                                                       property.Status == "Vendu" ? "bg-secondary" : "bg-dark")">
                                        @property.Status
                                    </span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">Aucun bien récent</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-xl-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-comments"></i> Messages Récents
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.RecentMessages.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var message in Model.RecentMessages)
                            {
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <strong>@message.Name</strong>
                                        <small class="text-muted">@message.Date.ToString("dd/MM HH:mm")</small>
                                    </div>
                                    <small class="text-muted">@message.Email</small><br />
                                    <small>@(message.Content.Length > 50 ? message.Content.Substring(0, 50) + "..." :
                                                                                                                                                                                                message.Content)</small>
                                        @if (!message.IsRead)
                                        {
                                            <span class="badge bg-danger ms-2">Nouveau</span>
                                        }
                                    </li>
                                }
                            </ul>
                        }
                    else
                        {
                            <p class="text-muted">Aucun message récent</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            // Graphique des biens par type
            const typeCtx = document.getElementById('propertyTypeChart').getContext('2d');
            const propertyTypeChart = new Chart(typeCtx, {
            type: 'doughnut',
            data: {
            labels: @Html.Raw(Model.PropertyTypeLabels),
            datasets: [{
            label: 'Nombre de biens',
            data: @Html.Raw(Model.PropertyTypeData),
            backgroundColor: [
            'rgba(255, 99, 132, 0.7)',
            'rgba(54, 162, 235, 0.7)',
            'rgba(255, 206, 86, 0.7)',
            'rgba(75, 192, 192, 0.7)',
            'rgba(153, 102, 255, 0.7)',
            'rgba(255, 159, 64, 0.7)',
            'rgba(199, 199, 199, 0.7)'
            ],
            borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
            'rgba(255, 159, 64, 1)',
            'rgba(199, 199, 199, 1)'
            ],
            borderWidth: 1
            }]
            },
            options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
            legend: {
            position: 'bottom',
            }
            }
            }
            });

            // Graphique des biens par statut
            const statusCtx = document.getElementById('propertyStatusChart').getContext('2d');
            const propertyStatusChart = new Chart(statusCtx, {
            type: 'bar',
            data: {
            labels: @Html.Raw(Model.PropertyStatusLabels),
            datasets: [{
            label: 'Nombre de biens',
            data: @Html.Raw(Model.PropertyStatusData),
            backgroundColor: [
            'rgba(75, 192, 192, 0.7)',
            'rgba(54, 162, 235, 0.7)',
            'rgba(201, 203, 207, 0.7)',
            'rgba(153, 102, 255, 0.7)'
            ],
            borderColor: [
            'rgba(75, 192, 192, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(201, 203, 207, 1)',
            'rgba(153, 102, 255, 1)'
            ],
            borderWidth: 1
            }]
            },
            options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
            y: {
            beginAtZero: true,
            ticks: {
            stepSize: 1
            }
            }
            },
            plugins: {
            legend: {
            display: false
            }
            }
            }
            });
        </script>
    }