@model RealEstateAdmin.Controllers.NotificationsViewModel
@{
    ViewData["Title"] = "Mes Notifications";
    ViewData["ActivePage"] = "Notifications";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-bell"></i> Mes Notifications
            @if (Model.UnreadCount > 0)
            {
                <span class="badge bg-danger">@Model.UnreadCount</span>
            }
        </h2>
        @if (Model.Notifications.Any(n => !n.IsRead))
        {
            <form method="post" asp-action="MarkAllAsRead">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="fas fa-check-double"></i> Tout marquer comme lu
                </button>
            </form>
        }
    </div>

    @if (TempData["UserSuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["UserSuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Notifications.Any())
    {
        <div class="list-group">
            @foreach (var notification in Model.Notifications)
            {
                var statusColor = notification.Title.Contains("acceptée") ? "success" :
                                 notification.Title.Contains("refusée") ? "danger" : "info";
                var iconClass = notification.Title.Contains("acceptée") ? "fa-check-circle" :
                               notification.Title.Contains("refusée") ? "fa-times-circle" : "fa-info-circle";

                <div class="list-group-item @(!notification.IsRead ? "list-group-item-primary" : "")">
                    <div class="d-flex w-100 justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <div class="d-flex align-items-center mb-2">
                                @if (!notification.IsRead)
                                {
                                    <span class="badge bg-danger me-2">NOUVEAU</span>
                                }
                                <span class="badge bg-@statusColor me-2">
                                    <i class="fas @iconClass"></i>
                                </span>
                                <h5 class="mb-0">@notification.Title</h5>
                            </div>

                            <p class="mb-2">@notification.Message</p>

                            @if (notification.Reservation?.Property != null)
                            {
                                <div class="alert alert-light mb-2">
                                    <strong><i class="fas fa-home"></i> Bien:</strong> @notification.Reservation.Property.Title
                                    <br />
                                    <strong><i class="fas fa-calendar"></i> Date:</strong>
                                    @notification.Reservation.ReservationDate.ToString("dd/MM/yyyy") à 
                                    @notification.Reservation.TimeSlot.ToString(@"hh\:mm")
                                    <br />
                                    <strong><i class="fas fa-info-circle"></i> Statut:</strong>
                                    @if (notification.Reservation.Status == "Accepté")
                                    {
                                        <span class="badge bg-success">Accepté</span>
                                    }
                                    else if (notification.Reservation.Status == "Refusé")
                                    {
                                        <span class="badge bg-danger">Refusé</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">En attente</span>
                                    }
                                </div>
                            }

                            <small class="text-muted">
                                <i class="fas fa-clock"></i> @notification.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>

                        <div class="d-flex flex-column gap-1 ms-3">
                            @if (!notification.IsRead)
                            {
                                <form method="post" asp-action="MarkAsRead" asp-route-id="@notification.Id">
                                    <button type="submit" class="btn btn-sm btn-outline-primary" title="Marquer comme lu">
                                        <i class="fas fa-check"></i>
                                    </button>
                                </form>
                            }
                            <form method="post" asp-action="Delete" asp-route-id="@notification.Id"
                                  onsubmit="return confirm('êtes-vous sûr de vouloir supprimer cette notification ?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Aucune notification pour le moment.
        </div>
    }
</div>